<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="splash.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Bienvenido a CASPI" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Ingrese para entrar a la aplicación" FontSize="Title" Padding="30,10,30,10"/>
        <StackLayout Padding="30,10,30,10">
            <Label Text="Ingrese usuario" />
            <Entry Placeholder="" x:Name="txt_user"/>
            <Label Text="Ingrese contraseña"/>
            <Entry Placeholder="" x:Name="txt_pass"/>
            <Button Text="Entrar" Clicked="btn_ingresar"/>
        </StackLayout>
    </StackLayout>
</ContentPage>
